<odoo>
    <data>
        <record id="view_product_extension_form_zpl" model="ir.ui.view">
            <field name="name">product.extension.form.zpl</field>
            <field name="model">product.wizard</field>
            <field name="arch" type="xml">
                <form string="Generar Etiqueta" js_class="dynamic_fields_form">
                    <sheet>
                        <div class="oe_title">
                            <h1>Generar Etiqueta</h1>
                        </div>
                        <group>
                            <field name="zpl_format" widget="radio" options="{'horizontal': true}" class="format_selector"/>                            
                            <field name="cantidad" class="format_field" data-format="format1 format3"/>                            
                            <field name="id_codigo" class="format_field" data-format="format2 format3 format4"/>                            
                            <field name="id_numeracion" class="format_field" data-format="format2 format3"/>
                        </group>
                        <footer>
                            <button string="Cancelar" class="btn-secondary" special="cancel"/>
                            <button string="Generar PDF" type="object" name="generate_pdf_from_zpl" class="btn-primary"/>
                        </footer>
                        <group>
                            <field name="pdf_file" invisible="1"/>
                            <field name="pdf_filename" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_generate_zpl_label" model="ir.actions.act_window">
            <field name="name">Generar Etiqueta</field>
            <field name="res_model">product.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_product_extension_form_zpl"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_product_extension" name="Generar Etiqueta" parent="stock.menu_stock_inventory_control" action="action_generate_zpl_label" sequence="10"/>
    </data>
</odoo>